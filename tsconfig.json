{
	"compilerOptions": {
		"target": "es2016",
		"lib": ["es2016"],
		"typeRoots": [
			"./node_modules/@types"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"experimentalDecorators":true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"outDir": "lib"
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}
